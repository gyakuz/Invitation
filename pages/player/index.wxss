page {
  height: 100%;
  background: #73231d;
  color: #fff;
}

.page {
  min-height: 100vh;
  padding: 40rpx 40rpx 60rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  background: linear-gradient(180deg, #8c5656 0%, #73231d 50%, #4a1612 100%);
  position: relative;
}

/* 顶部导航 */
.topbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  z-index: 10;
}

.topbar-left,
.topbar-right {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.topbar-left {
  justify-content: flex-start;
  opacity: 0.8;
}

.topbar-title {
  flex: 1;
  text-align: center;
  font-size: 30rpx;
  font-weight: 500;
  letter-spacing: 1rpx;
  opacity: 0.9;
}

/* 唱片区域 */
.turntable-container {
  height: 60vh; /* 照片尺寸为屏幕的3/5 */
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.turntable {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

/* 唱针 */
.needle {
  position: absolute;
  top: 40rpx;
  right: 50%;
  margin-right: -160rpx;
  z-index: 10;
  transform-origin: 30rpx 30rpx;
  transform: rotate(-30deg);
  transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
}

.needle.playing {
  transform: rotate(0deg);
}

.needle-base {
  position: absolute;
  top: 0;
  left: 0;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: radial-gradient(circle at center, #f0f0f0 0%, #a0a0a0 100%);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.5);
  z-index: 3;
}

.needle-arm {
  position: absolute;
  top: 25rpx;
  left: 25rpx;
  width: 220rpx;
  height: 10rpx;
  background: linear-gradient(90deg, #d0d0d0 0%, #808080 100%);
  border-radius: 5rpx;
  transform: rotate(40deg);
  transform-origin: left center;
  box-shadow: 2rpx 4rpx 10rpx rgba(0, 0, 0, 0.4);
}

.needle-head {
  position: absolute;
  top: 170rpx;
  left: 170rpx;
  width: 24rpx;
  height: 36rpx;
  background: #4a4a4a;
  border-radius: 4rpx;
  box-shadow: 2rpx 2rpx 6rpx rgba(0, 0, 0, 0.5);
}

/* 唱片 */
.disc {
  width: calc(100vw * 5 / 7);
  height: calc(100vw * 5 / 7);
  border-radius: 50%;
  position: relative;
  background: #0d0d0d;
  box-shadow: 
    0 0 0 12rpx rgba(255, 255, 255, 0.05),
    0 30rpx 80rpx rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
}

.disc.spinning {
  animation: spin 12s linear infinite;
}

.disc-groove {
  position: absolute;
  inset: 0;
  border-radius: 50%;
  background: repeating-radial-gradient(
    circle at center,
    transparent 0,
    transparent 2rpx,
    rgba(255, 255, 255, 0.03) 2rpx,
    rgba(255, 255, 255, 0.03) 4rpx
  );
}

.album {
  width: calc(100vw * 3 / 5);
  height: calc(100vw * 3 / 5);
  border-radius: 50%;
  z-index: 1;
  border: 4rpx solid #111;
}

.disc-label {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: #111;
  z-index: 2;
  border: 4rpx solid rgba(255, 255, 255, 0.1);
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

/* 歌曲信息 */
.meta {
  text-align: center;
  margin-top: -5vh; /* 整体上移屏幕高度的 1/20 */
  padding: 0 40rpx;
}

.song-title {
  font-size: 42rpx;
  font-weight: 600;
  letter-spacing: 1rpx;
  margin-bottom: 12rpx;
  color: #fff;
}

.song-sub {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.5);
  font-weight: 400;
}

/* 操作按钮 */
.actions {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin: 40rpx 40rpx 20rpx;
}

.action-item {
  position: relative;
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgba(255, 255, 255, 0.8);
  transition: all 0.2s ease;
}

.action-item.active {
  color: #ff2d55;
}

.badge {
  position: absolute;
  top: 15rpx;
  right: 15rpx;
  font-size: 18rpx;
  background: #ff2d55;
  color: #fff;
  padding: 2rpx 8rpx;
  border-radius: 10rpx;
  min-width: 20rpx;
  text-align: center;
}

/* 进度条 */
.progress {
  display: flex;
  align-items: center;
  padding: 0 40rpx;
  margin: 20rpx 0;
}

.time {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.4);
  min-width: 70rpx;
}

.time:last-child {
  text-align: right;
}

.slider {
  flex: 1;
  margin: 0 20rpx;
}

/* 播放控制 */
.controls {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 80rpx;
  margin-top: 20rpx;
}

.ctrl {
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgba(255, 255, 255, 0.9);
}

.ctrl.play {
  color: #fff;
}

/* 评论弹窗 */
.comment-sheet {
  background: #f8f8f8;
  height: 80vh;
  display: flex;
  flex-direction: column;
  position: relative;
}

.comment-header {
  padding: 30rpx 40rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.comment-tabs {
  display: flex;
  gap: 40rpx;
}

.tab {
  font-size: 28rpx;
  color: #999;
  position: relative;
}

.tab.active {
  color: #333;
  font-weight: 600;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: -15rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #333;
  border-radius: 2rpx;
}

.comment-sub-header {
  padding: 20rpx 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
}

.comment-sub-header .title {
  font-size: 24rpx;
  color: #666;
}

.comment-sort {
  display: flex;
  gap: 20rpx;
}

.sort-item {
  font-size: 24rpx;
  color: #999;
  padding: 4rpx 16rpx;
  background: #f0f0f0;
  border-radius: 20rpx;
}

.sort-item.active {
  color: #333;
  background: #e8e8e8;
}

.comment-list {
  flex: 1;
  padding: 0 40rpx;
  background: #fff;
}

.comment-item {
  display: flex;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.comment-body {
  flex: 1;
  margin-left: 24rpx;
}

.comment-meta {
  margin-bottom: 12rpx;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 4rpx;
}

.comment-user {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.comment-time-info {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 22rpx;
  color: #999;
}

.stars {
  display: flex;
  margin-left: 10rpx;
}

.comment-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.comment-footer {
  font-size: 22rpx;
  color: #999;
}

.write-comment-btn {
  position: absolute;
  right: 40rpx;
  bottom: 80rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #111;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.3);
}

.safe-area-inset-bottom {
  height: env(safe-area-inset-bottom);
}

.menu-list {
  padding: 20rpx 40rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: #f9f9f9;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.menu-icon {
  width: 80rpx;
  height: 80rpx;
  background: #333;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
}

.menu-info {
  flex: 1;
  margin: 0 24rpx;
}

.menu-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.menu-desc {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

.sheet-close {
  position: absolute;
  top: 30rpx;
  right: 40rpx;
}

/* 表单样式 */
.form-scroll {
  flex: 1;
  background: #fff;
}

.form-container {
  padding: 40rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item .label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.form-item .input {
  width: 100%;
  height: 80rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-item .textarea {
  width: 100%;
  height: 200rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.submit-btn {
  width: 100%;
  height: 90rpx;
  background: #73231d;
  color: #fff;
  border-radius: 45rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 600;
  margin-top: 60rpx;
  box-shadow: 0 10rpx 20rpx rgba(115, 35, 29, 0.2);
}

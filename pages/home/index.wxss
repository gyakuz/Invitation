Page {
  --td-tab-border-color: transparent;
  --td-tab-track-width: 24px;
  --td-tab-nav-bg-color: transparent;
  --td-grid-bg-color: transparent;
  overflow-x: hidden;
  overflow-y: auto;
}

.container {
  background: linear-gradient(180deg, #0B0B15 0%, #151C2E 100%);
  height: auto;
}

.top {
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  height: 24rpx;
  margin: 6rpx 0 30rpx 0;
  box-sizing: border-box;
  gap: 16rpx;
}

.top .top-text {
  font-weight: 400;
  font-size: 24rpx;
  line-height: 0;
  color: #FFFFFF;
  opacity: 0.5;
}

.top .icon {
  width: 28rpx;
  height: 22rpx;
  animation-name: run;
  animation-duration: 3s;
  animation-iteration-count: infinite;
}

.bottom {
  width: 100%;
  height: 60%;
  position: absolute;
  bottom: 0;
  box-sizing: border-box;
  background-color: rgba(51, 58, 82, 0.6);
  border-radius: 14px 14px 0px 0px;
  overflow: hidden;
  padding-bottom: 48rpx;
}

.btn {
  margin: 24px 10px;
}

.textarea-example {
  padding: 10px;
}

.text-prompt {
  height: 464rpx;
}

.image-prompt {
  height: 280rpx;
}

.custom-tabs {
  box-sizing: border-box;
  overflow: hidden;
  border: none;
}

.t-tabs__track--top,
.t-tabs__track--bottom {
  left: -2px !important;
  bottom: 4px !important;
}

.t-upload__wrapper {
  width: 100% !important;
  margin-bottom: 24rpx;
  height: 200rpx !important;
  background: #1B2239;
  border: 0.4px solid #4B4B4D;
  border-radius: 13px;
  box-sizing: border-box;
}

.image-to-image {
  width: 100%;
  height: 100%;
  justify-content: center;
  align-items: center;
  gap: 10rpx;
}

.image-icon {
  width: 60rpx;
  height: 60rpx;
}

.image-tip {
  font-size: 30rpx;
  color: #9E9E9E;
  letter-spacing: 2rpx;
}

@keyframes run {
  0% {
    opacity: 0.3;
  }

  25% {
    opacity: 1;
  }

  50% {
    opacity: 0.3;
  }

  75% {
    opacity: 1;
  }

  100% {
    opacity: 0.3;
    left: 100%;
  }
}